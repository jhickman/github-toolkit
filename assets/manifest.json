{
  "manifest_version": 2,
  "name": "GitHub Toolkit",
  "version": "1.0.3",
  "description": "A general toolkit for GitHub",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png",
    "256": "icon256.png",
    "512": "icon512.png"
  },
  "author": "Justin Hickman",
  "homepage_url": "https://github.com/jhickman/github-toolkit",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "content_scripts": [
    {
      "matches": [
        "*://github.com/*"
      ],
      "js": [
        "lib/require.js",
        "lib/require-cs.js",
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_icon": "icon128.png",
    "default_title": "GitHub Toolkit",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "lib/*",
    "app/*"
  ],
  "permissions": [
    "activeTab",
    "storage",
    "declarativeContent",
    "tabs",
    "webNavigation",
    "https://github.com/*",
    "https://*.gravatar.com/",
    "https://*.atlassian.com/",
    "https://*.atlassian.net/",
    "http://*.atlassian.net/"
  ]
}
